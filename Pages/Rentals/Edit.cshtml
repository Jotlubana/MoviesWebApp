@page
@model MoviesWebApp.Pages.Rentals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RentalsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RentalsModel.RentalsId" />
            <div class="form-group">
                <label asp-for="RentalsModel.UserId" class="control-label"></label>
                <select asp-for="RentalsModel.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="RentalsModel.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalsModel.MovieId" class="control-label"></label>
                <select asp-for="RentalsModel.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="RentalsModel.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalsModel.BookingDate" class="control-label"></label>
                <input asp-for="RentalsModel.BookingDate" class="form-control" />
                <span asp-validation-for="RentalsModel.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RentalsModel.IsDeliveryAddress" /> @Html.DisplayNameFor(model => model.RentalsModel.IsDeliveryAddress)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
